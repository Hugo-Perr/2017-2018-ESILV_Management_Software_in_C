<Window x:Class="POOI_PFR_Rendu_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POOI_PFR_Rendu_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="500">
    <Grid>
        <Image Source="/fond_menu.jpg"  Stretch="UniformToFill" Cursor="None"/>
        <StackPanel Width="160" Margin="163,111,170.6,9.8" VerticalAlignment="Stretch">
            <Button x:Name="Bouton_aj_monstre" Background="Wheat" Content="Ajouter    Monstre" HorizontalAlignment="Left" Height="22" Width="160" Click="Boutton_Ajouter_Monstre"  FontFamily="Showcard Gothic" TextOptions.TextHintingMode="Fixed"  />
            <Rectangle Fill="#FFFFFF" HorizontalAlignment="Left" Height="22" Stroke="Black" Width="190" Visibility="Hidden">
                <Rectangle.CacheMode>
                    <BitmapCache/>
                </Rectangle.CacheMode>
            </Rectangle>
            <Button x:Name="Bouton_aj_attraction" Background="Wheat" Content="Ajouter    Attraction" HorizontalAlignment="Left" Height="22" Width="160" Click="Boutton_Ajouter_Attraction"  FontFamily="Showcard Gothic" TextOptions.TextHintingMode="Fixed"/>
            <Rectangle Fill="#FFFFFF" HorizontalAlignment="Left" Height="22" Stroke="Black" Width="190" Visibility="Hidden">
                <Rectangle.CacheMode>
                    <BitmapCache/>
                </Rectangle.CacheMode>
            </Rectangle>
            <Button  x:Name="Bouton_modif_cagnotte" Background="Wheat" Content="Modifier    Cagnotte" HorizontalAlignment="Left" Height="22" Width="160" Click="Boutton_Modifier_Cagnotte"  FontFamily="Showcard Gothic" TextOptions.TextHintingMode="Fixed"/>
            <Rectangle  Fill="#FFFFFF" HorizontalAlignment="Left" Height="22" Stroke="Black" Width="190" Visibility="Hidden">
                <Rectangle.CacheMode>
                    <BitmapCache/>
                </Rectangle.CacheMode>
            </Rectangle>
            <Button x:Name="Bouton_selection_monstres" Background="Wheat" Content="Selection    Monstres" HorizontalAlignment="Left" Height="22" Width="160" Click="Boutton_Selection_Monstre"  FontFamily="Showcard Gothic" TextOptions.TextHintingMode="Fixed"/>
        </StackPanel>


    </Grid>
</Window>
